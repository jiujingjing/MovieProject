<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_total_star"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.u2androidproject.TotalStarActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ff5593"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="明星排行榜"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/find_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:gravity="bottom"
                >
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="bottom|center_horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_num2"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/num_orange_shape"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        />
                    <com.u2androidproject.widget.RoundImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        myview:type="circle"
                        android:src="@mipmap/ic_launcher"
                        android:id="@+id/iv_head2"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/tv_name2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="姓名"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="bottom|center_horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/num_red_shape"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#ffffff"
                        android:textSize="22sp"
                        />
                    <com.u2androidproject.widget.RoundImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        myview:type="circle"
                        android:src="@mipmap/ic_launcher"
                        android:id="@+id/iv_head"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="姓名"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="bottom|center_horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_num3"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@drawable/num_yellow_shape"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        />
                    <com.u2androidproject.widget.RoundImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        myview:type="circle"
                        android:src="@mipmap/ic_launcher"
                        android:id="@+id/iv_head3"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/tv_name3"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="姓名"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a6a3a3"
                ></View>

            <com.u2androidproject.widget.NoScrollListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mListView"
                ></com.u2androidproject.widget.NoScrollListView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
