<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_item_movie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.u2androidproject.ItemMovieActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff5593"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="三流之路"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@drawable/find_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#fff4f8"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_score"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="8.7"
                android:textColor="#fa2302"
                android:textSize="22sp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_count"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="更新至第10集"
                android:textColor="#949494"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来源 : "
                    android:textColor="#949494"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="youku "
                    android:textColor="#949494"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:background="@drawable/start_shape"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="播放"
                    android:textSize="22sp"
                    android:textColor="#ffffff"
                    android:drawableLeft="@mipmap/start"
                    android:gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp"
        >
        <RadioGroup
            android:id="@+id/mGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/rb_1"
                android:checked="true"
                android:background="@drawable/line_selector"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="剧集"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/text_color"
                />
            <RadioButton
                android:id="@+id/rb_2"
                android:background="@drawable/line_selector"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="简介"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/text_color"
                />
        </RadioGroup>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>

</LinearLayout>
